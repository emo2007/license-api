{
        "version": "0.2.0",
        "configurations": [
                {
                        "name": "blockd",
                        "type": "go",
                        "request": "launch",
                        "mode": "auto",
                        "program": "${workspaceRoot}/cmd/main.go",
                        "args": [
                                "-log-level=debug",
                                "-log-local=false",
                                "-log-add-source=true",

                                "-rest-address=localhost:8081",
                                "-db-host=localhost:8433",
                                "-db-database=blockd",
                                "-db-user=blockd",
                                "-db-secret=blockd",
                                "-db-enable-tls=false",
                        ]
                }
        ]
}